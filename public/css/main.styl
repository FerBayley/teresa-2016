blanco = #ffffff
negro = #000000
*
	border 0
	box-sizing border-box
	margin 0
	padding 0
body
	color #333
	font-size 16px
	font-family 'Open Sans', sans-serif	
	
a
	text-decoration none

.Contenedor
	/*background #260c52*/
	background-image url('../../public/images/bg-blur.jpg')
	background-repeat no-repeat
	background-position center
	background-size cover
	display flex
	height 620px
	&-derecho
		color blanco
		display inline-block
		margin 1em 0 0 0
		vertical-align top
		width 40%
		h2
			font-size 1em
			font-weight 100
	&-izquierdo
		display inline-block
		vertical-align top
		width 40%
	&-titulo
		color blanco
		font-size 2.5em
		font-weight 100
		margin 1.7em 0 .5em 0
		text-align left
	&-subtitulo
		color blanco
		font-weight 100
		margin 0 0 .3em 0
		text-align left
	&-textoDescripcion
		color blanco
		text-align left
	&-callToAction
		text-align left
	&-callToAction:hover
		background #769110
		border-bottom solid 7px #9cc015
	&-formatos
		text-align left
		a
			color blanco
			text-decoration underline
			padding 0 0 .5em 0
	&-layout
		margin 0 auto
		max-width 1200px
		padding-top 2em
		text-align center
		width 100%
	&-callToAction
		background #9cc015
		border-radius 5px
		border-bottom solid 7px green
		color blanco
		font-size 1.2em
		height auto
		margin 2em 0 1em 0
		max-width 270px
		padding 1em 0 1em 0
		text-align center
		width 100%
	&-formatos
		color blanco
		font-size .8em
		font-weight 100
.PreHeader
	background negro
	height 40px
	width auto
	&-titulo
		color blanco
		font-size .8em
		padding .7em 0 0 1em
		
.Cuerpo
	height auto
	padding 1.5em 0 1em 0
	text-align center
	margin 0 auto
	max-width 1100px
	width 100%
	&-titulo
		border-bottom solid 1px lightgrey
		font-weight 100
		padding 0 0 .5em 0
	&-texto
		line-height 30px
		margin 1em 0 0 0
		text-align left
		
.Boton
	background #9cc015
	border-radius 5px
	border-bottom solid 4px green
	color blanco
	line-height 1.8em
	margin 1em 0 1em 0
	margin 0 auto
	margin-bottom 2em
	margin-top 1em
	max-width 300px
	padding .5em 1em .5em 1em
	text-align center
	width 100%
.Boton:hover
	background #769110	

.Contenedor-temas
	background #EEE
	border-bottom solid 2px lightgrey
	border-top solid 3px lightgrey
	margin 3em 0 2em 0
	text-align center
	padding 1em 0 2em 0
	width 100%
	

.Autor
	height auto
	margin 0 auto
	margin-bottom 3em
	margin-top 3em
	max-width 1100px
	text-align center
	width 100%
	&-col1
		display inline-block
		padding 0 2em 0 2em
		vertical-align middle
		width 43%
	&-titulo
		font-size 1.4em
		font-weight 100
		margin 1em 0 0 0
		text-align left
	&-texto
		text-align left
		line-height 30px
	&-col2
		display inline-block
		font-size .9em
		padding 0 2em 0 2em
		vertical-align middle
		width auto
	&-precio
		background #9cc015
		border-radius 5px
		border-bottom solid 4px #008000
		color blanco
		height auto
		margin .5em 0 0 0
		max-width 350px
		padding .7em 0 .7em 0
		text-align center
		width 100%
	&-precio:hover
		background #769110
		

.Especialidades
	text-align left
	list-style none
	line-height 25px
	

.Perfil
	height auto
	max-width 1200
	text-align center
	width 100%
	&-image
		padding 2em 0 0 0
		

footer
	background negro
	color blanco
	font-size .8em
	height auto
	text-align center
	padding 1em 0 1em 0
	width 100%
	a
		color blanco
		text-decoration underline
	a:hover
		color grey
	

.Warning
	background salmon
	color blanco
	font-size .8em
	height auto
	padding .9em 0 .9em 0
	text-align center
	width 100%
	a
		color blanco
		text-decoration underline
	a:hover
		color #f79f95
	
.Contenedor-Estasapunto
	height auto
	text-align center
	margin .5em 0 0 0
	padding 0 0 1em 0
	width 100%
	h1
		color #9cc015
	h2
		color grey
		font-size .9em
		
.Contenedor-columnas
	height auto
	text-align center
	margin 0 auto
	margin-bottom 4em
	margin-top 1em
	max-width 1200px
	width 100%
	&-1
		background #e7e6ea
		border-radius 5px
		height 300px
		display inline-block
		margin 0 1em 0 1em
		padding 2em 0 2em 0
		vertical-align top
		width 30%
	&-2
		background #e7e6ea
		border-radius 5px
		height 300px
		display inline-block
		margin 0 1em 0 1em
		vertical-align top
		width 30%
	&-logo
		margin 0 0 1.5em 0
	&-img
		padding 1.9em 0 0 0
		
.Btn-comprar
	background #099fa0
	border-radius 7px
	border solid 2px lightgrey
	color blanco
	font-size 1.1em
	margin 0 auto
	margin-bottom .5em
